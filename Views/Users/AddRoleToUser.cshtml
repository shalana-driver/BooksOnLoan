@model BooksOnLoan.Models.ExtendedUser

@{
    ViewData["Title"] = "User Role";
}

<h1>User Role</h1>
<hr />
<dl class="row">
    <dt class = "col-sm-2">
            Role
        </dt>
        <dd class = "col-sm-10">
            @foreach (var role in ViewBag.UserRoles)
            {
                <p>@role</p>
            }
            @if(ViewBag.UserRoles.Count == 0)
            {
                <p>Unassigned</p>
            }
        </dd>
</dl>
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddRoleToUser" asp-for="Id">
            <select name="roleName">
                <option value="Member">Member</option>
                <option value="Admin">Admin</option>
            </select>
            <input type="submit" value="Update Role" />
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

